<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" stylesheets="@styles/dashboard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardRestaurantController">

    <HBox spacing="10">
        <!-- Left-side container -->
        <VBox minWidth="134.0" prefHeight="478.0" prefWidth="134.0" styleClass="left-container" HBox.hgrow="NEVER">
            <ImageView fx:id="logoImage" fitHeight="46.0" fitWidth="54.0" pickOnBounds="true" preserveRatio="true" />
            <VBox styleClass="menu-section">
                <MenuButton prefHeight="61.0" prefWidth="94.0" styleClass="text-style" text="Tables">
                    <items>
                        <MenuItem fx:id="Plat" onAction="#openTablePlat" text="Table Plat" />
                        <MenuItem fx:id="Offres" onAction="#openTableOffres" text="Table Offres" />
                        <MenuItem fx:id="Commandes" onAction="#openTableCommandes" text="Table Commandes" />
                        <MenuItem fx:id="reservations" onAction="#openTableCommandes" text="Table reservations" />
                        <MenuItem fx:id="tables" onAction="#openTableCommandes" text="les tables" />
                        <MenuItem fx:id="category" onAction="#openTableCommandes" text="Table category" />


                    </items>
                </MenuButton>
                <Label prefHeight="366.0" prefWidth="94.0" styleClass="text-style" text="Reclamation" />
                <Label prefHeight="366.0" prefWidth="94.0" styleClass="text-style" text="Sponsoring" />

            </VBox>

            <VBox prefHeight="186.0" prefWidth="94.0" styleClass="bottom-section" VBox.vgrow="ALWAYS">
                <Label prefHeight="585.0" prefWidth="94.0" styleClass="text-style" text="Check Profile"/>
                <Label fx:id="logoutLabel" onMouseClicked="#handleLogoutAction" prefHeight="301.0" prefWidth="94.0" styleClass="text-style" text="Logout" />
            </VBox>
        </VBox>
    </HBox>
</VBox>
