            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.TableOffresController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Button fx:id="addOfferButton" text="Add Offer" layoutX="14.0" layoutY="14.0" onAction="#handleAddOfferAction"/>
        <VBox fx:id="offersContainer" spacing="10" layoutX="14.0" layoutY="50.0" prefWidth="572.0" prefHeight="340.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </VBox>
    </children>
    <Button fx:id="goBackButton" layoutX="14.0" layoutY="615.0" onAction="#handleGoBack" text="Go Back" />

</AnchorPane>
