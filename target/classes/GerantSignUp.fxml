<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox fx:id="signupForm" alignment="TOP_CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.GerantSignupController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Button fx:id="backButton" text="Back" onAction="#handleBackAction" layoutX="10" layoutY="10"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <Label fx:id="usernameErrorLabel" text="Username is required." textFill="RED" visible="false"/>
    <TextField fx:id="nameField" promptText="Name"/>
    <Label fx:id="nameErrorLabel" text="Name is required." textFill="RED" visible="false"/>
    <TextArea fx:id="descriptionArea" promptText="Description"/>
    <Label fx:id="descriptionErrorLabel" text="Description is required." textFill="RED" visible="false"/>
    <Button text="Upload Document" onAction="#handleUploadDocument"/>
    <Label fx:id="documentErrorLabel" text="Document is required." textFill="RED" visible="false"/>
    <Button text="Upload Image" onAction="#handleUploadImage"/>
    <Label fx:id="imageErrorLabel" text="Image is required." textFill="RED" visible="false"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <Label fx:id="emailErrorLabel" text="Email is required." textFill="RED" visible="false"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <Label fx:id="passwordErrorLabel" text="Password is required." textFill="RED" visible="false"/>
    <Button text="Sign Up" onAction="#handleGerantSignUp"/>
</VBox>
