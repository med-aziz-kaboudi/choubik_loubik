<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<HBox fx:controller="controllers.LoginController" xmlns:fx="http://javafx.com/fxml" spacing="20" alignment="CENTER" stylesheets="@styles/login.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <!-- ImageView without the image source -->
    <ImageView fx:id="loginImage" fitWidth="200" preserveRatio="true" />

    <!-- Login fields and button on the right inside a VBox -->
    <VBox spacing="10" alignment="CENTER">
        <Button fx:id="backButton" text="Back" onAction="#handleBackAction"/>
        <TextField fx:id="usernameOrEmail" promptText="Enter Email"/>
        <PasswordField fx:id="password" promptText="Password"/>
        <Label fx:id="errorLabel" textFill="red"/>
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin"/>
    </VBox>
</HBox>
