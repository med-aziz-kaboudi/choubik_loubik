<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AllRestaurantsController" prefHeight="720" prefWidth="1280">
    <VBox spacing="10" AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20">
        <TextField fx:id="searchField" promptText="Search for a restaurant..." maxWidth="Infinity"/>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <FlowPane fx:id="restaurantsContainer" hgap="10" vgap="10" prefWidth="200" />
            <Button text="Back" onAction="#handleBackAction"/>
        </ScrollPane>
    </VBox>
</AnchorPane>
