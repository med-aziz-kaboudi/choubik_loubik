<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LivreurSignupController" stylesheets="@styles/livreurSignup.css">
    <children>
        <!-- Main horizontal box -->
        <HBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <children>
                <!-- Image on the left -->
                <ImageView fx:id="signupImage" fitWidth="300" fitHeight="400" preserveRatio="true" HBox.hgrow="NEVER" />

                <!-- Form fields on the right -->
                <VBox fx:id="signupForm" spacing="10" maxWidth="400" styleClass="form-container" HBox.hgrow="ALWAYS">
                    <children>
                        <Button fx:id="backButton" text="Back" onAction="#handleBackAction"/>
                        <Label text="Sign Up as a Livreur" styleClass="title-label"/>
                        <TextField fx:id="txtNom" promptText="Nom"/>
                        <TextField fx:id="txtPrenom" promptText="PrÃ©nom"/>
                        <TextField fx:id="txtEmail" promptText="Email"/>
                        <PasswordField fx:id="txtPassword" promptText="Password"/>
                        <ComboBox fx:id="cmbAdresse" promptText="Adresse"/>
                        <ComboBox fx:id="cmbVehicule" promptText="Type of Vehicle"/>
                        <ComboBox fx:id="cmbZoneLivraison" promptText="Delivery Zone"/>
                        <TextField fx:id="txtNumTel" promptText="Phone Number"/>
                        <Button fx:id="btnSignup" text="Sign Up" onAction="#handleSignup"/>
                        <Label fx:id="lblStatus" styleClass="error-label"/>
                        <Label fx:id="errorNom" styleClass="error-label"/>
                        <Label fx:id="errorPrenom" styleClass="error-label"/>
                        <Label fx:id="errorEmail" styleClass="error-label"/>
                        <Label fx:id="errorPassword" styleClass="error-label"/>
                        <Label fx:id="errorAdresse" styleClass="error-label"/>
                        <Label fx:id="errorVehicule" styleClass="error-label"/>
                        <Label fx:id="errorZoneLivraison" styleClass="error-label"/>
                        <Label fx:id="errorNumTel" styleClass="error-label"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
