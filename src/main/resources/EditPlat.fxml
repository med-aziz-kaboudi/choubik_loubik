<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.EditPlatController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Form elements for editing a Plat -->
    <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
        <TextField fx:id="nomTextField" promptText="Nom"/>
        <ComboBox fx:id="categoryComboBox" promptText="Category"/>
        <TextField fx:id="descriptionTextField" promptText="Description"/>
        <TextField fx:id="prixTextField" promptText="Prix"/>
        <Button text="Submit" fx:id="submitButton" onAction="#handleSubmitAction" />
    </VBox>

</AnchorPane>
